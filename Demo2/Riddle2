import javafx.scene.shape.*;
import javafx.scene.image.*;
import javafx.scene.text.*;
import javafx.scene.*;
import javafx.stage.*;
import javafx.scene.layout.*;
import javafx.scene.paint.Color;
import javafx.scene.control.*; 
import javafx.geometry.*; 
import javafx.event.EventHandler;
import javafx.event.ActionEvent;

import javafx.application.Application;
import javafx.animation.AnimationTimer;
 
public class Riddle2 {

	public static void display() {
        Stage primaryStage = new Stage();
        primaryStage.initModality(Modality.APPLICATION_MODAL);
        primaryStage.setTitle("Riddle2");
	
		VBox root = new VBox();
		Scene scene = new Scene(root, 800, 600);

		Label riddle = new Label("What do you get when you cross a hamburger with a computer?");
		riddle.setFont(Font.font("Times New Roman", 21));
		root.getChildren().add(riddle);

		Label lab = new Label("Guess:");
		lab.setLayoutX(150);
		lab.setLayoutY(90);

		Label outLab = new Label("");
		outLab.setLayoutX(225);
		outLab.setLayoutY(120);

		TextField txtField = new TextField("(3 words, first word is A)");
		txtField.setLayoutX(300);
		txtField.setLayoutY(90);

		// create a button
	    Button b = new Button("Go back to PS");
	    Button b2 = new Button("Guess");

	    b.setLayoutX(20);
		b.setLayoutY(20);
	    b2.setLayoutX(20);
		b2.setLayoutY(50);


	        EventHandler<ActionEvent> event = new EventHandler<ActionEvent>() {
	            public void handle(ActionEvent eve)
	            {						
					b.setOnAction(e -> {
						PoliceStation.PS();
					});
				
	            }
	        };

	        EventHandler<ActionEvent> event2 = new EventHandler<ActionEvent>() {
	            public void handle(ActionEvent eve2)
	            {	
					if (txtField.getText().toUpperCase().equals("A BIG MAC")) {
						outLab.setText("The camera is fixed! You use it to take a photo of the weapon. \n" +
									   "You discover the weapon used was a black high heeled shoe.");						
						
					} else {
						outLab.setText("please try again.");
					}
	            }
	        };

	    // when button is pressed
	    b.setOnAction(event);
	    b2.setOnAction(event2);

		root.getChildren().addAll(lab, txtField, outLab, b, b2);
		primaryStage.setScene(scene);
		primaryStage.setMaximized(true);
		primaryStage.show();
		
	}
}
