import java.util.Scanner; // or import java.util.*;
import java.util.ArrayList;

public class PoliceStation {
	LocationA a;
	a = new LocationA;
	LocationB b;
	b = new LocationB;
	LocationC c;
	c = new LocationC;
	LocationD d;
	d = new LocationD;
	
	public static void main ( String[] args) {
	
		Scanner crimeS = new Scanner (System.in);
		System.out.print("Type in "inventory" if you want to see your clues.");    //User input: print inventory - FIX**
		String inventory = crimeS.nextLine();
	
		ArrayList inventory = new ArrayList(); //or ArrayList<String> inventory = new ArrayList<String>();
		
		System.out.print("Print location: ");     //User input: print location - FIX**
		String place = crimeS.nextLine();
		System.out.println(inventory + place);
		crimeS.close();
		
		System.out.println("Police patrols cordoned off the area adjacent to the house and searched it.  
		A subsequent inspection of the crime scene by detectives and criminologists, the examination of 
		the traces and the interrogation of the victims showed that the attacker acted thoughtfully and 
		very sophisticatedly. Witnesses gave a generally vague, although similar descriptions of the 
		appearance of the offender. According to them, it was a young woman of dense build at the age 
                of 20-30 years above average height.");		//print story at crime scene
		
		while (inventory >= 0) {
			if (inventory = 1) { 	  //call A/B
				a.doSomething();  
				b.doSomething();
				
			}
			else if (inventory <= 4) { //call A/B/C
				a.doSomething();
				b.doSomething();
				c.doSomething();
			}
			else if (inventory = 5) { //call A/B/C/D
				a.doSomething();
				b.doSomething();
				c.doSomething();
				d.doSomething();
			}
		}
	}
}
