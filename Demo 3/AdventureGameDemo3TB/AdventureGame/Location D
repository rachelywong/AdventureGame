import java.util.Scanner;
import java.util.ArrayList;

public class LocationD {
	
	public static void main(String[] args){
		String murderer = "murderer";
		boolean guess = false;
		int guessNumber = 0;
		
		System.out.println("Who did it? 2 guesses");
		
		ArrayList suspectsList = new ArrayList();
		suspectsList.add( "A" );
		suspectsList.add( "B" );
		suspectsList.add( "C" );
		suspectsList.add( "murderer" );
		
		System.out.print(suspectsList);
		
		Scanner keyboard = new Scanner(System.in);
		String user_guess = keyboard.next();
		
		while (guess == false & guessNumber < 2){ 
			guessNumber += 1;
			
			if (guessNumber != 2) {
			
			if (user_guess.contentEquals("murderer")){
				System.out.println("Dance off");
				DanceOff.main(args); //call dance off
				guess = true;
			}
			else {
				System.out.println("Wrong");
				guess = false;
				System.out.println("Who did it? 2 guesses");
				user_guess = keyboard.next();
			}
			
			}
			
			else {
				System.out.println("You ran out of guesses");
				PoliceStation.main(args); //call PS
			}
				
		}
	}

}
