import java.util.Scanner;
import java.util.Random;

public class DanceOff {

	public static void main (String[] args) {
		
		Scanner reader = new Scanner(System.in);  
		
		String answer = "W";
		String alphabet = "WASD";
		int N = alphabet.length();
		
		int suspectCount = 2;
		int userCount = 0;
			
			for (int userI = 0; userI <= 3; userI++) {
				
				System.out.println ("Please type a move with the WASD dance moves: ");
				String userAnswer = reader.next();
				
				if (userAnswer.equals("W")) {
						userCount = userCount + 1;
					}
				if (userI == 3 ) {
					System.out.println("You matched: " + userCount + " times");

					if (userCount > suspectCount) {
						System.out.println ("You win");
					}
					else {
						System.out.println ("You lose. The end.");
					}
					
				}
				

				}
					
			}

		
		

		}
		
